import pygame
import time
import random

# Initialize pygame
pygame.init()

# Screen dimensions
WIDTH, HEIGHT = 1000, 1000
win = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Snake Game - OOP")

# Colors
WHITE = (255, 255, 255)
BLACK = (0, 0, 0)
RED = (255, 0, 0)
GREEN = (0, 255, 0)

# Clock
clock = pygame.time.Clock()
SPEED = 15

# Snake block size
BLOCK = 20

# Snake class
class Snake:
    def __init__(self):
        self.body = [[100, 50]]
        self.direction = "RIGHT"
    
    def move(self):
        head = self.body[0].copy()
        if self.direction == "UP":
            head[1] -= BLOCK
        elif self.direction == "DOWN":
            head[1] += BLOCK
        elif self.direction == "LEFT":
            head[0] -= BLOCK
        elif self.direction == "RIGHT":
            head[0] += BLOCK
        
        self.body.insert(0, head)
        self.body.pop()
    
    def grow(self):
        self.body.append(self.body[-1])
    
    def draw(self, surface):
        for block in self.body:
            pygame.draw.rect(surface, GREEN, (block[0], block[1], BLOCK, BLOCK))

# Food class
class Food:
    def __init__(self):
        self.position = [random.randrange(0, WIDTH-BLOCK, BLOCK),
                         random.randrange(0, HEIGHT-BLOCK, BLOCK)]
    
    def draw(self, surface):
        pygame.draw.rect(surface, RED, (self.position[0], self.position[1], BLOCK, BLOCK))
    
    def respawn(self):
        self.position = [random.randrange(0, WIDTH-BLOCK, BLOCK),
                         random.randrange(0, HEIGHT-BLOCK, BLOCK)]

# Main game function
def game_loop():
    snake = Snake()
    food = Food()
    score = 0
    run = True

    while run:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                run = False
            elif event.type == pygame.KEYDOWN:
                if event.key == pygame.K_UP and snake.direction != "DOWN":
                    snake.direction = "UP"
                elif event.key == pygame.K_DOWN and snake.direction != "UP":
                    snake.direction = "DOWN"
                elif event.key == pygame.K_LEFT and snake.direction != "RIGHT":
                    snake.direction = "LEFT"
                elif event.key == pygame.K_RIGHT and snake.direction != "LEFT":
                    snake.direction = "RIGHT"
        
        snake.move()
        
        # Check collision with food
        if snake.body[0] == food.position:
            snake.grow()
            food.respawn()
            score += 1
        
        # Check collision with walls
        if (snake.body[0][0] < 0 or snake.body[0][0] >= WIDTH or
            snake.body[0][1] < 0 or snake.body[0][1] >= HEIGHT):
            run = False
        
        # Check collision with itself
        if snake.body[0] in snake.body[1:]:
            run = False

        win.fill(BLACK)
        snake.draw(win)
        food.draw(win)
        pygame.display.update()
        clock.tick(SPEED)

    print(f"Game Over! Your score: {score}")
    pygame.quit()

# Start the game
if __name__ == "__main__":
    game_loop()
