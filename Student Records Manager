


def add_student():
    name = input("Enter Student Name: ")
    roll = input("Enter Roll Number: ")
    marks = input("Enter Marks: ")

    with open("students.txt", "a") as f:   # append mode
        f.write(f"{roll},{name},{marks}\n")

    print(" Student record added successfully!\n")


def view_students():
    try:
        with open("students.txt", "r") as f:
            print("\n--- Student Records ---")
            for line in f:
                roll, name, marks = line.strip().split(",")
                print(f"Roll: {roll} | Name: {name} | Marks: {marks}")
    except FileNotFoundError:
        print(" No records found! Please add some first.\n")

def search_student():
    roll_no = input("Enter Roll Number to search: ")
    found = False
    try:
        with open("students.txt", "r") as f:
            for line in f:
                roll, name, marks = line.strip().split(",")
                if roll == roll_no:
                    print(f"\nüéØ Student Found ‚Üí Roll: {roll}, Name: {name}, Marks: {marks}\n")
                    found = True
                    break
        if not found:
            print("‚ö†Ô∏è Student not found!\n")
    except FileNotFoundError:
        print("‚ùå No records found!\n")


while True:
    print("\n===== Student Records Manager =====")
    print("1. Add Student")
    print("2. View All Students")
    print("3. Search Student")
    print("4. Exit")

    choice = input("Enter your choice: ")

    if choice == "1":
        add_student()
    elif choice == "2":
        view_students()
    elif choice == "3":
        search_student()
    elif choice == "4":
        print("üëã Exiting... Goodbye!")
        break
    else:
        print("‚ö†Ô∏è Invalid choice! Try again.\n")
